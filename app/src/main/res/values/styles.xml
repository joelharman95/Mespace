<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="otpViewStyle">@style/OtpWidget.OtpView</item>
        <item name="fontFamily">@font/googlesans_regular</item>
    </style>

    <style name="NoActionBar" parent="AppTheme">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
    </style>

    <style name="SkipTextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/size_16</item>
        <item name="android:padding">@dimen/spacing_normal</item>
        <item name="android:textColor">@color/blue</item>
    </style>

    <style name="TitleTextView">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/size_32</item>
        <item name="android:padding">@dimen/spacing_normal</item>
        <item name="android:textColor">@color/black</item>
        <item name="lineSpacing">@dimen/size_40</item>
    </style>

    <style name="TextViewSubTitle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/size_15</item>
        <item name="android:padding">@dimen/spacing_normal</item>
        <item name="android:textColor">@color/subtitle_color</item>
        <item name="android:lineSpacingExtra">@dimen/spacing_small</item>
        <item name="lineSpacing">@dimen/size_20</item>
    </style>

    <style name="ConnectionButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/spacing_large</item>
        <item name="android:padding">@dimen/spacing_normal</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/size_15</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="ProfileEditText">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:imeOptions">actionNext</item>
        <item name="android:inputType">text</item>
        <item name="android:textSize">@dimen/size_15</item>
    </style>

    <style name="ToolbarTextView">
        <item name="android:textSize">@dimen/size_24</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/spacing_small</item>
    </style>

    <style name="CircularIcon">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:padding">@dimen/spacing_small</item>
        <item name="android:layout_marginEnd">@dimen/spacing_tiny</item>
        <item name="android:background">@drawable/circle_shape_grey</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
</resources>
