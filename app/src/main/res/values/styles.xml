<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="otpViewStyle">@style/OtpWidget.OtpView</item>
        <item name="fontFamily">@font/googlesansregular</item>
        <item name="android:textSize">@dimen/size_18</item>
    </style>

    <style name="NoActionBar" parent="AppTheme">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:statusBarColor">@color/blue</item>

    </style>

    <style name="SkipTextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/size_16</item>
        <item name="android:padding">@dimen/spacing_normal</item>
        <item name="android:textColor">@color/blue</item>
    </style>

    <style name="TitleTextView">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/size_26</item>
        <item name="android:padding">@dimen/spacing_normal</item>
        <item name="android:textColor">@color/black</item>
        <item name="lineSpacing">@dimen/size_40</item>
    </style>


    <style name="TitleTextView_xxhtpi">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/size_32</item>
        <item name="android:padding">@dimen/spacing_normal</item>
        <item name="android:textColor">@color/black</item>
        <item name="lineSpacing">@dimen/size_40</item>
    </style>
    <style name="TextViewSubTitle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/size_15</item>
        <item name="android:padding">@dimen/spacing_normal</item>
        <item name="android:textColor">@color/subtitle_color</item>
        <item name="android:lineSpacingExtra">@dimen/spacing_small</item>
        <item name="lineSpacing">@dimen/size_20</item>
    </style>
    <style name="TextViewSubTitle_new">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/size_15</item>
        <item name="android:textColor">@color/subtitle_color</item>
        <item name="android:lineSpacingExtra">@dimen/spacing_small</item>
        <item name="lineSpacing">@dimen/size_20</item>
    </style>
    <style name="TextViewSubTitle_xxhtpi">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/size_18</item>
        <item name="android:padding">@dimen/spacing_normal</item>
        <item name="android:textColor">@color/subtitle_color</item>
        <item name="android:lineSpacingExtra">@dimen/spacing_small</item>
        <item name="lineSpacing">@dimen/size_20</item>
    </style>
    <style name="ConnectionButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/spacing_large</item>
        <item name="android:padding">@dimen/spacing_normal</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/size_15</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="ProfileEditText">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:imeOptions">actionNext</item>
        <item name="android:inputType">text</item>
        <item name="android:textSize">@dimen/size_18</item>
        <item name="android:paddingStart">0dp</item>
        <item name="boxStrokeWidth">0dp</item>
        <item name="errorTextColor">@color/blue</item>
        <item name="colorControlActivated">@color/blue</item>
        <item name="textInputStyle">@style/Widget.AppTheme.TextInputLayout</item>
    </style>


    <style name="ProfileEditText_small">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:imeOptions">actionNext</item>
        <item name="android:inputType">text</item>
        <item name="android:textSize">@dimen/size_12</item>
        <item name="android:paddingStart">0dp</item>
        <item name="boxStrokeWidth">0dp</item>
        <item name="errorTextColor">@color/blue</item>
        <item name="colorControlActivated">@color/blue</item>
        <item name="textInputStyle">@style/Widget.AppTheme.TextInputLayout</item>
    </style>
    <style name="Widget.AppTheme.TextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.FilledBox.Dense">
        <item name="materialThemeOverlay">@style/ThemeOverlay.AppTheme.TextInputEditText.FilledBox.Dense</item>
    </style>
    <style name="ThemeOverlay.AppTheme.TextInputEditText.FilledBox.Dense" parent="ThemeOverlay.MaterialComponents.TextInputEditText.FilledBox.Dense">
        <item name="colorControlActivated">@color/red</item>
    </style>
    <style name="ToolbarTextView">
        <item name="android:textSize">@dimen/size_24</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/spacing_small</item>
    </style>

    <style name="CircularIcon">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:padding">@dimen/spacing_small</item>
        <item name="android:layout_marginEnd">@dimen/spacing_tiny</item>
        <item name="android:background">@drawable/circle_shape_grey</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="EditTextTheme" parent="Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="colorAccent">#E4E9F2</item>
        <item name="colorControlNormal">#E4E9F2</item>
        <item name="colorControlActivated">#E4E9F2</item>
        <item name="colorControlHighlight">#E4E9F2</item>
        <item name="boxStrokeColor">@color/text_input_box_stroke</item>
    </style>

    <style name="AsTextViewSubTitle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/size_15</item>
        <item name="android:padding">@dimen/spacing_normal</item>
        <item name="android:textColor">@color/subtitle_color</item>
        <item name="android:lineSpacingExtra">@dimen/spacing_small</item>

    </style>
    <style name="AsTextViewSubTitle_new">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/size_15</item>
        <item name="android:textColor">@color/subtitle_color</item>

    </style>

    <style name="AsEditTextTheme" parent="Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="colorAccent">#E4E9F2</item>
        <item name="colorControlNormal">#E4E9F2</item>
        <item name="colorControlActivated">#E4E9F2</item>
        <item name="colorControlHighlight">#E4E9F2</item>
        <item name="android:textSize">@dimen/size_15</item>
        <item name="boxStrokeColor">@color/text_input_box_stroke</item>
    </style>

    <style name="AddSpaceEditText">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:imeOptions">actionNext</item>
        <item name="android:inputType">text</item>
        <item name="android:textSize">@dimen/size_15</item>
        <item name="android:paddingStart">0dp</item>

        <item name="boxStrokeWidth">0dp</item>
        <item name="errorTextColor">@color/blue</item>
        <item name="colorControlActivated">@color/blue</item>
        <item name="textInputStyle">@style/Widget.AppTheme.TextInputLayout</item>
    </style>
    
    <style name="ChipsStyle" parent="@style/Widget.MaterialComponents.Chip.Filter">
        <item name="chipIconVisible">false</item>
        <item name="chipStrokeColor">@color/grey</item>
        <item name="chipBackgroundColor">@color/chips_color_state</item>
        <item name="chipStrokeWidth">1dp</item>
        <item name="checkedIconVisible">false</item>
        <item name="rippleColor">@color/blue</item>
    </style>

    <style name="SelectedChip" parent="@style/Widget.MaterialComponents.Chip.Filter">
        <item name="chipIconVisible">false</item>
        <item name="chipStrokeColor">@color/grey</item>
        <item name="chipBackgroundColor">@color/chips_color_state</item>
        <item name="chipStrokeWidth">1dp</item>
        <item name="checkedIconVisible">false</item>
        <item name="rippleColor">@color/blue</item>
        <item name="closeIconEnabled">true</item>
        <item name="closeIconVisible">true</item>
        <item name="android:checkable">false</item>
    </style>

    <style name="BottomSheet" parent="Animation.Design.BottomSheetDialog">
        <item name="background">@drawable/rounded_bottom_sheet</item>
    </style>
</resources>
